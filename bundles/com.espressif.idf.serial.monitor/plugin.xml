<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="com.espressif.idf.serial.monitor.commands.serialmonitorCommand"
            name="IDF Serial Monitor">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.espressif.idf.serial.monitor.handlers.SerialMonitorHandler"
            commandId="com.espressif.idf.serial.monitor.commands.serialmonitorCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="com.espressif.idf.serial.monitor.commands.serialmonitorCommand"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+6">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="com.espressif.idf.serial.monitor.toolbars.Toolbar">
            <command
                  commandId="com.espressif.idf.serial.monitor.commands.serialmonitorCommand"
                  icon="icons/espressif.png"
                  id="com.espressif.idf.serial.monitor.toolbars.toolbarcommand"
                  tooltip="IDF Monitor">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
