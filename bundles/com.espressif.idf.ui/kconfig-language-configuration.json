{
  "comments": {
    "lineComment": "#"
  },
  "brackets": [
    ["(", ")"],
    ["menu", "endmenu"],
    ["choice", "endchoice"]
  ],
  "autoClosingPairs": [
    ["(", ")"],
    ["\"", "\""]
  ],
  "surroundingPairs": [
    ["(", ")"],
    ["\"", "\""]
  ],
  "indentationRules": {
    "increaseIndentPattern": "^([\\s]*)(menu|config|menuconfig|choice|help|comment)(.*)$",
    "decreaseIndentPattern": "^(endmenu|endchoice|endif)(.*)$"
  },
  "wordPattern": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b",
  "folding": {
    "markers": {
      "start": "^\\s*#\\s*region\\b",
      "end": "^\\s*#\\s*endregion\\b"
    }
  }
}
